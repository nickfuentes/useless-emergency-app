<!DOCTYPE html>
<html lang="en">
  <head>
    {{> header}}
  </head>

 {{> jumbotron}}

  <body class="overflow-hidden">
    <div class="container overflow-auto vh-100">
      <h1 class="text-center title">Fill Out In A Timely Manner</h1>

      <form action="/emergency" method="POST">
        <div class="form-group">
          <label>Name</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter name"
            name="name"
            required
          />
        </div>

        <div class="form-group">
          <label>Age</label>
          <input
            type="number"
            class="form-control"
            placeholder="Enter age"
            name="age"
            required
          />
        </div>

        <div class="form-group">
          <label>Location</label>
          <input
            type="text"
            class="form-control"
            placeholder="Enter location"
            name="location"
            required
          />
        </div>

        <div class="form-group">
          <label>Phone Number</label>
          <input
            type="tel"
            class="form-control"
            placeholder="Enter phone number"
            name="phone"
            required
          />
        </div>

        <div class="form-group">
          <label>Time</label>
          <input
            type="time"
            class="form-control"
            placeholder="Enter time"
            name="time"
            required
          />
        </div>

        <div class="form-group">
          <label>Are You Safe?</label>
          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="safe"
              value="true"
              required
            />
            <label class="form-check-label">Yes</label>
          </div>

          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="safe"
              value="false"
              required
            />
            <label class="form-check-label">No</label>
          </div>

          <div class="form-check">
            <input
              class="form-check-input"
              type="radio"
              name="safe"
              value="false"
              required
            />
            <label class="form-check-label">I do not know</label>
          </div>
        </div>

        <div class="form-group">
          <label class="my-1 mr-2">Priority Level</label>
          <select class="custom-select my-1 mr-sm-2" name="priority" required>
            <option selected>Choose...</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
            <option value="4">Four</option>
            <option value="5">Five</option>
          </select>
        </div>

        <div class="form-group">
          <label>Description</label>
          <textarea
            class="form-control"
            placeholder="Description of scene"
            rows="3"
            name="description"
            required
          ></textarea>
        </div>

        <div class="form-group">
          <label class="my-1 mr-2">How Did You Hear About Us?</label>
          <select class="custom-select my-1 mr-sm-2" name="referral" required>
            <option selected>Choose...</option>
            <option value="Another Victim">Another Victim</option>
            <option value="Flyer">Flyer</option>
            <option value="Internet">Internet</option>
            <option value="Local Ad">Local Ad</option>
            <option value="Local Newspaper">Local Newspaper</option>
            <option value="Radio">Radio</option>
            <option value="Yellow Pages">Yellow Pages</option>
            <option value="Social Media">Social Media</option>
          </select>
        </div>

        <div class="container text-center mb-4">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>

    {{> footer}}
  </body>
</html>
